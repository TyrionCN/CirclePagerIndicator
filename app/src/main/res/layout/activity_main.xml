<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/test_vp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <tyrion.circlepageindicator.CirclePagerIndicator
        android:id="@+id/test_cpi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        circle:circleCount="3"
        circle:circleDivide="15dp"
        circle:circleEmptyColor="#66ffffff"
        circle:circleFillColor="#ffffff"
        circle:circleRadius="5dp"
        circle:circleStroke="3dp"/>
</RelativeLayout>
